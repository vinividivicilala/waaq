<script>
  const mobileModeBtn = document.querySelector('#mobileModeToggle');
  const documentEl = document.querySelector('body');
  const themeTog = documentEl.querySelector('#modeToggleSwitch');
  // tog-left => light & tog-right => dark
  const currentTheme = localStorage.getItem('theme');
  if (currentTheme) {
    documentEl.setAttribute('data-theme', currentTheme);
    if (currentTheme === 'dark') {
      themeTog.classList.remove('bx-toggle-left');
      themeTog.classList.add('bx-toggle-right');
    }
  }

  function switchTheme() {
    if (themeTog.classList.contains('bx-toggle-left')) {
      documentEl.setAttribute('data-theme', 'light');
      localStorage.setItem('theme', 'light');
    } else {
      documentEl.setAttribute('data-theme', 'dark');
      localStorage.setItem('theme', 'dark');
    }
  }

  themeTog.addEventListener('change', switchTheme, false);
  mobileModeBtn.addEventListener('click', () => {
    if (themeTog.classList.contains('bx-toggle-left')) {
      themeTog.classList.remove('bx-toggle-left');
      themeTog.classList.add('bx-toggle-right');
      switchTheme();
    } else if (themeTog.classList.contains('bx-toggle-right')) {
      themeTog.classList.remove('bx-toggle-right');
      themeTog.classList.add('bx-toggle-left');
      switchTheme();
    }
  });
</script>
